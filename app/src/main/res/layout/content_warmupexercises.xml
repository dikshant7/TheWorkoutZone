<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:autoSizeTextType="uniform"
    app:autoSizeMinTextSize="10dp"
    app:autoSizeMaxTextSize="100dp"
    android:background="#FFFFFF"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".warmupexercises"
    tools:showIn="@layout/activity_warmupexercises">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#FFFFFF">
        <!-- main heading starts-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Top 10 warmup Exercises"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="10sp"
                app:autoSizeMaxTextSize="100sp">
            </TextView>
        </LinearLayout>
        <!-- main heading ends-->
        <!-- pushups -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="1) Pushups"
                android:textStyle="bold"
                android:textSize="30dp">
            </TextView>
            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gifImageView"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_marginTop="50dp"
                android:background="#FFFFFF"
                android:backgroundTint="#FFFFFF"
                android:src="@drawable/pushups"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="225dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:textSize="15sp"
android:text="1)Get down on all fours, placing your hands slightly wider than your shoulders.\n\n2)Straighten your arms and legs.\n\n3)Lower your body until your chest nearly touches the floor.\n\n4)Pause, then push yourself back up.\n\n5)Repeat.\n\n
">
            </TextView>
        </RelativeLayout>
        <!--pushups end-->
        <!-- armcircles -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="3dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="2) Arm Circles"
                android:textStyle="bold"
                android:textSize="30dp">
            </TextView>
            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gifImageView2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="50dp"
                android:background="#FFFFFF"
                android:backgroundTint="#FFFFFF"
                android:src="@drawable/armcircles"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="250dp"
                android:textSize="15sp"
android:text="1)Stand with your feet shoulder-width apart and extend your arms parallel to the floor. \n\n2)Circle your arms forward using small controlled motions, gradually making the circles bigger until you feel a stretch in your triceps. \n\n3)Reverse the direction of the circles after about 10 seconds. \n\n
">                > </TextView>
        </RelativeLayout>
        <!--armcicles end-->
        <!-- burpees -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="3) Burpees"
                android:textStyle="bold"
                android:textSize="30dp">
            </TextView>
            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gifImageView3"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="50dp"
                android:background="#FFFFFF"
                android:backgroundTint="#FFFFFF"
                android:src="@drawable/burpees"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="250dp"
                android:textSize="15sp"
android:text="1)Start in a squat position with your knees bent, back straight, and your feet about shoulder-width apart. \n\n2)Lower your hands to the floor in front of you so they’re just inside your feet. \n\n3)With your weight on your hands, kick your feet back so you’re on your hands and toes, and in a pushup position. \n\n4)Keeping your body straight from head to heels, do one pushup. Remember not to let your back sag or to stick your butt in the air. \n\n5)Do a frog kick by jumping your feet back to their starting position. \n\n6)Stand and reach your arms over your head. \n\n7)Jump quickly into the air so you land back where you started. \n\n8)As soon as you land with knees bent, get into a squat position and do another repetition. \n\n
">

            </TextView>        </RelativeLayout>
        <!--burpees end-->
        <!-- jumping jack-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="4) Jumping Jack"
                android:textStyle="bold"
                android:textSize="30dp">
            </TextView>
            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gifImageView4"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="50dp"
                android:background="#FFFFFF"
                android:backgroundTint="#FFFFFF"
                android:src="@drawable/jumpingjacks"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="250dp"
                android:textSize="15sp"
android:text="1)Stand upright with your legs together, arms at your sides. \n\n2)Bend your knees slightly, and jump into the air. \n\n3)As you jump, spread your legs to be about shoulder-width apart. Stretch your arms out and over your head. \n\n4)Jump back to starting position. \n\n
">
            </TextView>       </RelativeLayout>
        <!--jumping jack end-->
        <!-- plank -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="5) Plank"
                android:textStyle="bold"
                android:textSize="30dp">
            </TextView>
            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gifImageView5"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_marginTop="50dp"
                android:background="#FFFFFF"
                android:backgroundTint="#FFFFFF"
                android:src="@drawable/plank"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="250dp"
                android:textSize="15sp"
android:text="1)Begin in the plank position, face down with your forearms and toes on the floor. Your elbows are directly under your shoulders and your forearms are facing forward. Your head is relaxed and you should be looking at the floor.\n\n2)Hold this position for 10 seconds. Release to floor.\n\n3)Over time work up to 30, 45, or 60 seconds.\n\n
">

            </TextView>        </RelativeLayout>
        <!--plank end-->
        <!-- crunches-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="6) Crunches"
                android:textStyle="bold"
                android:textSize="30dp">
            </TextView>
            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gifImageView6"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="50dp"
                android:background="#FFFFFF"
                android:backgroundTint="#FFFFFF"
                android:src="@drawable/crunches"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="250dp"
                android:textSize="15sp"
android:text="1)Lie down on your back. Plant your feet on the floor, hip-width apart. Bend your knees and place your arms across your chest. Contract your abs and inhale. \n\n2)Exhale and lift your upper body, keeping your head and neck relaxed. \n\n3)Inhale and return to the starting position. \n\n
">
            </TextView>   </RelativeLayout>
        <!--crunches end-->
        <!-- mountain climbers -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="7) Mountain Climbers"
                android:textStyle="bold"
                android:textSize="30dp">
            </TextView>
            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gifImageView7"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_marginTop="50dp"
                android:background="#FFFFFF"
                android:backgroundTint="#FFFFFF"
                android:src="@drawable/mountainclimbers"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="250dp"
                android:textSize="15sp"
android:text="1)Get into a plank position, making sure to distribute your weight evenly between your hands and your toes. \n\n2)Check your form—your hands should be about shoulder-width apart, back flat, abs engaged, and head in alignment. \n\n3)Pull your right knee into your chest as far as you can. \n\n4)Switch legs, pulling one knee out and bringing the other knee in. \n\n5)Keep your hips down, run your knees in and out as far and as fast as you can. Alternate inhaling and exhaling with each leg change. \n\n
"
                >

            </TextView>        </RelativeLayout>
        <!--mountain climbers ends-->
        <!-- Plank Knee to Elbow -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="8) Plank Knee to Elbow"
                android:textStyle="bold"
                android:textSize="30dp">
            </TextView>
            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gifImageView8"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_marginTop="50dp"
                android:background="#FFFFFF"
                android:backgroundTint="#FFFFFF"
                android:src="@drawable/plankkneetoelbow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="250dp"
                android:textSize="15sp"
 android:text="1)Lay face down on the ground with extended legs. \n\n2)Point your toes while you place your hands beneath your shoulders. \n\n3)Push yourself up into the plank position. \n\n4)Maintaining a tight core and flat back, bring your left knee to your right elbow. \n\n5)Pause and slowly return each to the starting point. \n\n6)Repeat with the other side and keep alternating. \n\n
">

            </TextView>        </RelativeLayout>  <!--Plank Knee to Elbow-->
        <!-- shoulder rolls-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="9) Shoulder Rolls"
                android:textStyle="bold"
                android:textSize="30dp">
            </TextView>
            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gifImageView10"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="50dp"
                android:background="#FFFFFF"
                android:backgroundTint="#FFFFFF"
                android:src="@drawable/shoulderrolls"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="250dp"
                android:textSize="15sp"
android:text="1)Stand straight with your arms by your sides and with your feet shoulder width apart\n\n2)Slowly rotate your shoulders forward making big circles\n\n3)Repeat the movement backward until the set is complete\n\n
">
            </TextView> </RelativeLayout>
        <!--shoulder rolls ends-->
        <!-- squats  -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10) Squats"
                android:textStyle="bold"
                android:textSize="30dp">
            </TextView>
            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gifImageView9"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="50dp"
                android:background="#FFFFFF"
                android:backgroundTint="#FFFFFF"
                android:src="@drawable/squats2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="250dp"
                android:textSize="15sp"
android:text="1)Stand with feet a little wider than hip width, toes facing front. \n\n2)Drive your hips back—bending at the knees and ankles and pressing your knees slightly open\n\n3)Sit into a squat position while still keeping your heels and toes on the ground, chest up and shoulders back. \n\n4)Strive to eventually reach parallel, meaning knees are bent to a 90-degree angle. \n\n5)Press into your heels and straighten legs to return to a standing upright position. \n\n
">            </TextView> </RelativeLayout>
        <!--squats -->
    </LinearLayout>
    <!-- main container ends-->
</androidx.core.widget.NestedScrollView>