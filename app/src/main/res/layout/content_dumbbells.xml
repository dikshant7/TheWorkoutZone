<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".dumbbells"
    tools:showIn="@layout/activity_dumbbells"
    android:background="@drawable/dbg"
    android:adjustViewBounds="true"
    android:scaleType="centerCrop">
    <!--maincontainer-->

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"

      android:orientation="vertical"
      android:layout_marginLeft="2dp"
      android:layout_marginRight="2dp">
      <!--heading container-->
<LinearLayout
    android:layout_marginTop="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:gravity="center"
        android:id="@+id/textView27"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#80FFFFFF"
        android:text="You have selected Dumbbells \n Please select body part"
        android:textColor="#17202A"
        android:textStyle="bold"
        app:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="10sp"
        app:autoSizeMaxTextSize="100sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</LinearLayout>
      <!--heading container ends-->
      <!--button container-->
      <!--1st-->
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <Button
              android:id="@+id/Abdominal"
              android:layout_width="200dp"
              android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:layout_marginTop="15dp"
              android:background="#66FFFFFF"
              android:text="Abdominals"
              android:textColor="#17202A"
              android:textStyle="bold"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintHorizontal_bias="0.436"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent" />

      </RelativeLayout>
      <!--2-->
      <RelativeLayout
          android:layout_marginTop="20dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <Button
              android:id="@+id/Chest"
              android:layout_width="200dp"
              android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:background="#66FFFFFF"
              android:text="Chest"
              android:textStyle="bold"
              app:layout_constraintHorizontal_bias="0.0"
              app:layout_constraintTop_toTopOf="parent" />
      </RelativeLayout>
      <!--3-->
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp">

          <Button
              android:id="@+id/Shoulders"
              android:layout_width="200dp"
              android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:background="#66FFFFFF"
              android:text="Shoulders"
              android:textStyle="bold"
              app:layout_constraintHorizontal_bias="0.0"
              app:layout_constraintTop_toTopOf="parent" />

      </RelativeLayout>
      <!--4-->
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp">

          <Button
              android:id="@+id/Back"
              android:layout_width="200dp"
              android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:background="#66FFFFFF"
              android:text="Back"
              android:textStyle="bold"
              app:layout_constraintHorizontal_bias="0.0"
              app:layout_constraintTop_toTopOf="parent" />

      </RelativeLayout>
      <!--5-->
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp">

          <Button
              android:id="@+id/Biceps"
              android:layout_width="200dp"
              android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:background="#66FFFFFF"

              android:text="biceps"

              android:textStyle="bold"
              app:layout_constraintHorizontal_bias="0.0"
              app:layout_constraintTop_toTopOf="parent" />

      </RelativeLayout>
      <!--6-->
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp">

          <Button
              android:id="@+id/Triceps"
              android:layout_width="200dp"
              android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:background="#66FFFFFF"
              android:text="Triceps"
              android:textStyle="bold"
              app:layout_constraintHorizontal_bias="0.0"
              app:layout_constraintTop_toTopOf="parent" />
      </RelativeLayout>
      <!--7-->
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp">

          <Button
              android:id="@+id/Forearms"
              android:layout_width="200dp"
              android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:background="#66FFFFFF"
              android:text="Forearms"
              android:textStyle="bold"
              app:layout_constraintHorizontal_bias="0.0"
              app:layout_constraintTop_toTopOf="parent" />
      </RelativeLayout>
      <!--8-->
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp">

          <Button
              android:id="@+id/Legs"
              android:layout_width="200dp"
              android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:background="#66FFFFFF"
              android:text="Legs"
              android:textStyle="bold"
              app:layout_constraintHorizontal_bias="0.0"
              app:layout_constraintTop_toTopOf="parent" />
      </RelativeLayout>


  </LinearLayout>
</androidx.core.widget.NestedScrollView>